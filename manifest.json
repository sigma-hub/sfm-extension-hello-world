{
  "$schema": "https://raw.githubusercontent.com/aleksey-hoffman/sigma-file-manager/v2/src/modules/extensions/sdk/manifest.schema.json",
  "id": "sigma.hello-world",
  "name": "Hello World",
  "version": "1.2.0",
  "description": "A demo extension that adds greetings, file info, and selection tools to the context menu.",
  "author": {
    "name": "Aleksey Hoffman",
    "url": "https://github.com/aleksey-hoffman"
  },
  "repository": "https://github.com/sigma-hub/sfm-extension-hello-world",
  "license": "MIT",
  "icon": "icon.png",
  "categories": [
    "Example"
  ],
  "tags": [
    "example"
  ],
  "type": "api",
  "main": "index.js",
  "permissions": [
    "contextMenu",
    "commands",
    "notifications",
    "dialogs"
  ],
  "contributes": {
    "commands": [
      {
        "id": "greet",
        "title": "Greet User",
        "description": "Shows a greeting notification"
      },
      {
        "id": "show-info",
        "title": "Show File Info",
        "description": "Shows information about selected files"
      }
    ],
    "contextMenu": [
      {
        "id": "say-hello",
        "title": "ðŸ‘‹ Say Hello",
        "group": "extensions",
        "order": 1
      },
      {
        "id": "count-selected",
        "title": "ðŸ“Š Count Selected Items",
        "group": "extensions",
        "order": 2,
        "when": {
          "selectionType": "multiple"
        }
      },
      {
        "id": "file-info",
        "title": "â„¹ï¸ Show File Details",
        "group": "extensions",
        "order": 3,
        "when": {
          "selectionType": "single",
          "entryType": "file"
        }
      },
      {
        "id": "copy-path",
        "title": "ðŸ“‹ Copy Path",
        "group": "extensions",
        "order": 4,
        "when": {
          "selectionType": "single"
        }
      }
    ]
  },
  "engines": {
    "sigmaFileManager": ">=2.0.0"
  }
}