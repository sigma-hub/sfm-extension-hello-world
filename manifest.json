{
  "$schema": "https://raw.githubusercontent.com/aleksey-hoffman/sigma-file-manager/v2/src/modules/extensions/sdk/manifest.schema.json",
  "id": "sigma.hello-world",
  "name": "Example",
  "version": "1.5.1",
  "description": "An example extension demonstrating context menus, commands, notifications, dialogs, context API, built-in commands, and configurable settings.",
  "author": {
    "name": "Aleksey Hoffman",
    "url": "https://github.com/aleksey-hoffman"
  },
  "repository": "https://github.com/sigma-hub/sfm-extension-example",
  "license": "MIT",
  "icon": "icon.png",
  "categories": [
    "Example"
  ],
  "tags": [
    "example"
  ],
  "type": "api",
  "main": "index.js",
  "permissions": [
    "contextMenu",
    "commands",
    "notifications",
    "dialogs"
  ],
  "contributes": {
    "configuration": {
      "title": "Example Extension Settings",
      "properties": {
        "greeting": {
          "type": "string",
          "default": "Hello",
          "description": "The greeting message to display"
        },
        "showNotifications": {
          "type": "boolean",
          "default": true,
          "description": "Show notifications for actions"
        },
        "notificationDuration": {
          "type": "number",
          "default": 4000,
          "minimum": 1000,
          "maximum": 10000,
          "description": "Duration of notifications in milliseconds"
        },
        "greetingStyle": {
          "type": "string",
          "default": "friendly",
          "enum": [
            "friendly",
            "formal",
            "casual"
          ],
          "enumDescriptions": [
            "Warm and welcoming",
            "Professional tone",
            "Relaxed and informal"
          ],
          "description": "The style of greeting messages"
        }
      }
    },
    "commands": [
      {
        "id": "greet",
        "title": "Greet User",
        "description": "Shows a greeting notification with your name"
      },
      {
        "id": "show-info",
        "title": "Show Extension Info",
        "description": "Shows extension and app version information"
      },
      {
        "id": "show-context",
        "title": "Show Current Context",
        "description": "Shows current path and selection info using context API"
      },
      {
        "id": "open-file-dialog",
        "title": "Open File Dialog",
        "description": "Opens a native file picker dialog"
      },
      {
        "id": "list-builtin-commands",
        "title": "List Built-in Commands",
        "description": "Shows available built-in commands"
      },
      {
        "id": "show-settings",
        "title": "Show Current Settings",
        "description": "Displays the current extension settings"
      }
    ],
    "contextMenu": [
      {
        "id": "say-hello",
        "title": "ðŸ‘‹ Say Hello",
        "group": "extensions",
        "order": 1
      },
      {
        "id": "count-selected",
        "title": "ðŸ“Š Count Selected Items",
        "group": "extensions",
        "order": 2,
        "when": {
          "selectionType": "multiple"
        }
      },
      {
        "id": "file-info",
        "title": "â„¹ï¸ Show File Details",
        "group": "extensions",
        "order": 3,
        "when": {
          "selectionType": "single",
          "entryType": "file"
        }
      },
      {
        "id": "copy-path",
        "title": "ðŸ“‹ Copy Path",
        "group": "extensions",
        "order": 4,
        "when": {
          "selectionType": "single"
        }
      },
      {
        "id": "quick-view-file",
        "title": "ðŸ‘ï¸ Quick View",
        "group": "extensions",
        "order": 5,
        "when": {
          "selectionType": "single",
          "entryType": "file"
        }
      },
      {
        "id": "open-in-explorer",
        "title": "ðŸ“‚ Open in System Explorer",
        "group": "extensions",
        "order": 6,
        "when": {
          "selectionType": "single"
        }
      }
    ]
  },
  "engines": {
    "sigmaFileManager": ">=2.0.0"
  }
}